{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["github>taiga-family/renovate-config"],
    "packageRules": [
        {
            "enabled": true,
            "matchManagers": ["npm"],
            "matchUpdateTypes": ["major"]
        },
        {
            "enabled": false,
            "rangeStrategy": "widen",
            "matchDepTypes": ["engines", "peerDependencies"]
        }
    ]
}
